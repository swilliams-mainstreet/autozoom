{
  "manifest_version": 2,

  "name": "Zoom 200%",
  "description": "This extension automatically zooms in to 200% for Chrome users.",
  "version": "1.0.0",

  "icons": {
    "128": "resources/icon-128.png"
  },

  "browser_action": {
    "default_icon": {
      "38": "resources/icon-active-38.png"
    }
  },

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["chrome-content-script.bundle.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "background": {
    "scripts": ["chrome-background-script.bundle.js"]
  },

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
